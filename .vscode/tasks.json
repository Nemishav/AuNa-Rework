{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ROS2Build",
            "type": "shell",
            "command": "cd /home/vscode/workspace/packages && colcon build --symlink-install --allow-overriding rclcpp --cmake-args -DCMAKE_EXPORT_COMPILE_COMMANDS=ON && mv build/compile_commands.json ..",
            "problemMatcher": []
        },
        {
            "label": "Auna-Gazebo: Gazebo Launch World",
            "type": "shell",
            "command": "source packages/install/setup.bash && /home/vscode/workspace/packages/src/auna_gazebo/.vscode/gazebo_world.sh",
            "problemMatcher": [],
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": true,
              "panel": "shared",
              "showReuseMessage": false,
              "clear": true
            },
            "options": {
              "cwd": "/home/vscode/workspace"
            }
          }
    ]
}